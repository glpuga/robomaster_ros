<?xml version="1.0"?>

<robot xmlns:xacro="http://playerstage.sourceforge.net/gazebo/xmlschema/#xacro" xmlns:ignition="http://gazebosim.org/schema">

  <xacro:macro name="wheel" params="name xyz direction side tf_prefix=''">

    <link name="${tf_prefix}${name}_wheel_link">
      <inertial>
        <origin xyz="-0.0002104 5.31e-05 -0.0004148" rpy="0 0 0"/>
        <mass value="0.162"/>
        <inertia ixx="0.0002" ixy="0" ixz="0" iyy="0.00012" iyz="0" izz="0.00012"/>
      </inertial>
      <visual name="${name}_wheel_bolt">
        <origin xyz="0 ${side * 0.0145} 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="0.007" length="0.001"/>
        </geometry>
        <material name="bolt">
          <color rgba="0.45 0.15 0.0 1.0"/>
        </material>
      </visual>
      <visual name="${name}_wheel">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file:$(find robomaster_description)/meshes/wheel.dae" scale="1.0 ${direction} 1.0"/>
        </geometry>
        <material name="wheel_plastic"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="0.042"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference='${tf_prefix}${name}_wheel_link'>
      <collision>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>0.0</mu2>
              <fdir1 ignition:expressed_in="base_link">1 ${-1.0 * direction} 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>
    </gazebo>

    <joint name="${tf_prefix}${name}_wheel_joint" type="continuous">
      <origin xyz="${xyz}" rpy="0 0 0"/>
      <parent link="${tf_prefix}chassis_base_link"/>
      <child link="${tf_prefix}${name}_wheel_link"/>
      <axis xyz="0 1.0 0"/>
    </joint>

  </xacro:macro>

</robot>
